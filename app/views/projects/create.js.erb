<% if remotipart_submitted? %>
  <%- rendering = j render(partial: 'projects/form', locals: {project: @project}).to_str %>
  $("#new-project").html("<%= rendering %>")
  $("#panel-update").append("<div class='panel panel-success custom'>successfully added!</div>")
   <%- rendering = j render(partial: 'users/projects', locals: {projects: current_user.projects}).to_str %>
  $("#user-projects").html("<%= rendering %>")

<% else %>
  $("#new-project").html("<%= j render(partial: 'projects/form', locals: {project: @project}) %>")
  $("#panel-update").append("<%= j render(partial: 'projects/success') %>")
<% end %>


