<section id="port-item-details">
  <div class="container-fluid padding-side-60">
     <div class="post-header">
        <div class="e-divider-2"></div>
     </div>
     <div class="e-divider-4"></div>
     <div class="row profile-row">
        <div class="col-md-4">
          <%= image_tag @user.show_avatar, class: "img-responsive", id: "profile-pic", style: "padding-bottom: 20px;"%>
           <div>
             <ul class="jobinfo">
                <% @user.social_links.each do |link_type, link| %>
                  <% if link_type == "email" %>
                    <li><%= link %></li>
                  <% else %>
                    <li><%=link_to link_type, link%></li>
                  <% end %>
                <% end %>
              </ul>
           </div>
           <div class="e-divider-4"></div>
        </div>
        <div class="col-md-1"></div>
        <div class="col-md-7">
          <div>
            <h3 class="font-accident-two-normal e-uppercase"><%= @user.full_name %></h3>
            <div class="e-divider-2"></div>
            <p>
              <%= @user.bio %>
            </p>
          </div>
          <div id="user-projects">
            <%= render partial: 'users/projects', locals: {projects: @user.projects}  %>
          </div>
        </div>
     </div>
  </div>
</section>

